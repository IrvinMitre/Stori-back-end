{
    "compilerOptions": {
      "module": "commonjs",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "rootDir": ".",
      "noEmit": true,
      "target": "es2019",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "strict": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "paths": {}
    },
    "include": [
      "src",
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }